{
  "include": ["src"],
  "exclude": ["./serviceAccountKey.json"],
  "compileOnSave": true,
  "compilerOptions": {
    "module": "esnext",
    "target": "ES5",
    "outDir": "dist",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "removeComments": true,
  }
}
